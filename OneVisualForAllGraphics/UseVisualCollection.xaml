<Window x:Class="OneVisualForAllGraphics.UseVisualCollection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:OneVisualForAllGraphics"
        mc:Ignorable="d"
        Title="UseVisualCollection" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="MyCanvas" MouseDown="MyCanvas_OnMouseDown">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <TranslateTransform X="{Binding TranslateX}" Y="{Binding TranslateY}" />
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
    </Grid>
</Window>
